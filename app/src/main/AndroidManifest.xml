<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nongkiyuk.nongkiyuk">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_nongkiyuk"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_nongkiyuk_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.Main.MainActivity"></activity>
        <activity
            android:name=".activities.Login.LoginActivity"
            android:theme="@style/AppTheme.Dark"></activity>
        <activity
            android:name=".activities.SignUp.SignupActivity"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>